    <div>
        <div class="cards-list">
            <% if (locals.cards) { %>
                <% for (const card of cards) { %>
                    <a class="card" href="/detail/<%= card.id %>">
                        <img src="<%= card.img %>" alt="Image de <%= card.name %>">
                        <h2>#<%= card.id %> <%= card.name %></h2>
                    </a>
                <% } %>
            <% } %>
        </div>
    </main>
